pipeline {
  agent any
  environment {
    COURSE = 'Calgary DevOps'
    BRANCH = 'main'
    WWWROOT = '/var/www'
    SSHUSER = 'jenkins'
    SSHKEY = 'C:\\Program Files (x86)\Jenkins\Controller2Keypair.pem'
  }
  stages {
    stage('Audit Tools') {
      steps {
        echo "Audit all tools to be use on this pipeline ${BRANCH}"
        bat "git --version"
        bat "node --version"
        bat "npm --version"
        bat "ng --version"
        echo "Workspace Folder: ${WORKSPACE}"
      }
    }
    stage('Install packages') {
      steps {
        bat "git pull origin ${BRANCH}"
      }
    }
    stage('Install Front-End Packages') {
      steps {
        dir("${WORKSPACE}/conduit-ui") {
          echo "Install conduit UI packages"
          bat "npm install"
        }
      }
    }
    stage('Run linting') {
      steps {
        dir("${WORKSPACE}/conduit-ui") {
          echo "npm run lint"
        }
      }
    }
    stage('Build UI') {
      steps {
        dir("${WORKSPACE}/conduit-ui") {
          bat "npm run build"
        }
      }
    }
    stage('Deploy app to WEB01') {
      steps {
        bat "ssh -i ${SSHKEY} Web01 rm -rf /home/${SSHUSER}/conduit"
        bat "scp -i ${SSHKEY} -r ${WORKSPACE}/conduit-ui/dist Web01:/home/${SSHUSER}/conduit"
        bat "ssh -i ${SSHKEY} Web01 sudo rm -rf ${WWWROOT}/conduit"
        bat "ssh -i ${SSHKEY} Web01 sudo cp -r /home/${SSHUSER}/conduit ${WWWROOT}/conduit"
      }
    }
  }
}
